<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetailsActivity"
    android:background="@color/colorPrimaryDark">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_bookdetails"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/bookdetails_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/settings_back"
                    android:layout_alignParentStart="true"
                    ></TextView>
                <TextView
                    android:id="@+id/settings_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Details"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"

                    android:textColor="#fff"

                    ></TextView>


            </RelativeLayout>



        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ImageView
        android:id="@+id/bookdetails_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/appbar_bookdetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"></ImageView>

    <TextView
        android:id="@+id/bookdetails_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookdetails_image"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:hint="Book name"
        >

    </TextView>

    <TextView
    android:id="@+id/bookdetails_price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/bookdetails_name"
    android:padding="10dp"
    android:textAlignment="center"
    android:layout_margin="15dp"
    android:layout_marginTop="10dp"
    android:textSize="17sp"
    android:textStyle="bold"
    android:textColor="#fff"
    android:textColorHint="#fff"
    android:hint="Price"
    >

</TextView>
    <TextView
        android:id="@+id/seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bookdetails_price"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:textSize="17sp"

        android:textColor="#fff"
        android:textColorHint="#fff"
        android:hint="Seller:-"
        >
    </TextView>
    <TextView
        android:id="@+id/bookdetails_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_margin="15dp"
        android:layout_marginTop="5dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:hint="username"
        >
    </TextView>




    <Button
    android:id="@+id/chatwith_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/bookdetails_seller"
    android:layout_marginTop="20dp"

    android:layout_marginBottom="20dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:background="@drawable/button"
    android:padding="15dp"

    android:text="chat with the seller!"
    android:textColor="@android:color/white"

    ></Button>


    <Button
        android:id="@+id/location_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatwith_user"
        android:layout_marginTop="5dp"

        android:layout_marginBottom="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/button2"
        android:padding="15dp"

        android:text="See Location on Map"
        android:textColor="@android:color/white"

        ></Button>





</RelativeLayout>